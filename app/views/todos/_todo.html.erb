<li id="<%= dom_id(todo) %>" 
    class="todo-item bg-[#C0C6BC] transition rounded-xl shadow-md p-4">
  <div class="flex items-center justify-between">
    <div class="flex items-center gap-4">
      <span class="todo-status text-lg font-mono text-[#514F4D] ml-2">
        <% if todo.completed %>
          <%= button_to todo_path(todo, todo: { completed: false }), 
              method: :patch, 
              data: { turbo: false }, 
              class: "w-auto h-auto flex justify-center cursor-pointer" do %>
            <%= image_tag "checkbox-check-svgrepo-com.svg", class: "w-8 h-8"%>
          <% end %>
        <% else %>
          <%= button_to todo_path(todo, todo: { completed: true }), 
              method: :patch, 
              data: { turbo: false }, 
              class: "w-auto h-auto flex justify-center cursor-pointer" do %>
            <%= image_tag "checkbox-svgrepo-com.svg", class: "w-8 h-8" %>
          <% end %>
        <% end %>
      </span>
      <span class="todo-title <%= 'line-through text-[#514F4D] opacity-70' if todo.completed %> text-lg max-md:text-sm font-semibold text-[#3D4140] mx-2">
        <%= todo.title %>
      </span>
    </div>
    <div class="todo-actions flex gap-3">
      <%= button_to  todo_path(todo),
            method: :delete, 
              data: { turbo: false, confirm: "Are you sure you want to delete this todo?" }, 
            class: "px-2 py-2 rounded-lg bg-red-500 text-white hover:bg-red-600 transition max-md:text-sm" do %>
        <%= image_tag "xmark-svgrepo-com.svg", class: "w-4 h-4" %>
      <% end %>
    </div>
  </div>
</li>
